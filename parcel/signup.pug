        #type
          p 儲蓄
          p#income 收入
          p#expend 支出
          p 轉帳
        form#fin
          .box
            p 日期
            input(type = "text", name = "date", value = "05/13/2022", id="da")
          .box
            p 金錢
            input(type = "text", name = "cost", id="spend")
          .box
            p 名稱
            input(type = "text", name = "items", id="na")
          .box
            p 帳戶
            input(type = "text", name = "money", value = "現金")
          .box
            p 備註
            input(type = "text", name = "repeat")
          button(type="submit", id="save")
            img(src = "./image/btn/btn_save.png" height = "100%") 
            
          #keyboard
            .board_box
              p#one 1
              p#two 2
              p#three 3
            .board_box
              p#four 4 
              p#five 5 
              p#six 6 
            .board_box
              p#seven 7 
              p#eight 8 
              p#nine 9 
            .board_box
              p#backspace C
              p#zero 0 
              p#ok OK
        
      #barcode
        h1 Barcode

      #project
        .bar
          img(src = "./image/btn/btn_arrow_back.png", height = "2.8325%")
          img(src = "./image/btn/btn_search.png", height = "2.8325%")
          p 儲蓄專案
        #type_bar 
          p 一般儲蓄
          p 個人專案
          p 共同專案
          p 達成成就
        #project_list
        #no_project
          p 尚未建立專案
        img#add_project_btn(src = "./image/btn/btn_AddProject.png", height = "32px")

      #add_project
        .bar
          img(src = "./image/btn/btn_arrow_back.png", height = "2.8325%")
          img(src = "./image/btn/btn_close.png", height = "2.8325%")
          p 新增專案
        form#project_form
          .box
            p 專案名稱
            input(type = "text", name = "project_name")
          .box
            p 分類顏色
            .color_selector
              img(src = "./image/project/Project_colordot_orange.png", height = "50.535%")
              img(src = "./image/btn/btn_arrow_down.png", height = "17.836%")
          .box
            p 日期
            .date_box 
              input(type = "text", name = "start_date", class = "calendar")
              p -
              input(type = "text", name = "end_date", class = "calendar")
          .box
            p 目標金額
            input(type = "text", name = "target_number")
          .box
            p 參與成員
            p#member
            img#add_mem(src = "./image/MainPage/addcircle.png", height = "85.7%")
          .box
            p 分配設定
            #distribute_setting
              p （預設）均分
              img(src = "./image/btn/btn_arrow_down.png", height = "17.836%")
          .box
            p 提醒
            img(src = "./image/project/btn_switch.png", height = "68.57%")
          .box
            p 備註
            textarea(name = "note")
          button(type="submit")
            img(src = "./image/btn/btn_save.png", height = "100%")
          #add_project-output

      #add_member
        .bar
          img(src = "./image/btn/btn_arrow_back.png", height = "2.8325%")
          img(src = "./image/btn/btn_close.png", height = "2.8325%")
          p 新增成員
        #search_box 
          p 請輸入好友ID 
          #id_box 
            input(type = "text", name = "userid")
            img(src = "./image/btn/btn_search.png", height = "47.56%")
