          #detail_bar
            p 當日明細
            img(src = "./image/btn/btn_arrow_right.png", height = "40%")
          .list
        .add_button

      #account
        h1 Account
      #accounting 
        .bar
          img#back(src = "./image/btn/btn_arrow_back.png", height = "2.8325%")
          p 記帳
        #everyday_earn
          img(src = "./image/Accounting/box_SelectDate.png", width = "87.8%")
